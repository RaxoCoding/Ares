datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model Event {
	id          String   @id @default(cuid())
	name        String
	description String?
	date        DateTime
	location    String
	createdAt   DateTime @default(now())
	updatedAt   DateTime @updatedAt
	participantIds String[]
	maxParticipants Int
	minParticipants Int
}

generator client {
	provider = "prisma-client-js"
}